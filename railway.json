{
  "build": {
    "builder": "nixpacks",
    "buildCommand": "composer install --ignore-platform-req=ext-intl --ignore-platform-req=ext-zip --optimize-autoloader --no-scripts --no-interaction"
  },
  "deploy": {
    "startCommand": "php artisan serve --host=0.0.0.0 --port=$PORT",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 60
  }
}