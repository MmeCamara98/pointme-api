{
  "build": {
    "extensions": [
      "ctype",
      "curl",
      "dom",
      "fileinfo",
      "filter",
      "hash",
      "mbstring",
      "openssl",
      "pcre",
      "pdo",
      "session",
      "tokenizer",
      "xml",
      "intl",
      "zip"
    ],
    "cmds": [
      "composer install --optimize-autoloader --no-scripts --no-interaction",
      "npm ci",
      "npm run build",
      "php artisan config:cache",
      "php artisan route:cache",
      "php artisan view:cache"
    ]
  }
}
